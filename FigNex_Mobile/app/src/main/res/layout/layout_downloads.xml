<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nút quay lại và tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                app:tint="@android:color/holo_orange_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung tải xuống"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_marginStart="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Phim đã tải -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phim đã tải xuống"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNoDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có gì để hiển thị"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Phim đề xuất tải xuống -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phim đề xuất tải xuống"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgSuggestedMovie"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/nowayhome" />

            <ImageView
                android:id="@+id/btnDownload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/download_24px"
                android:layout_marginStart="12dp"
                app:tint="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/demon_slayer" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/download_24px"
                android:layout_marginStart="12dp"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
