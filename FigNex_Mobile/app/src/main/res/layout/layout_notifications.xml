<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewNotifications"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/notificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thông báo 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_notification_dark"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎬 Phim mới: Spider-Man: No Way Home"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có bản vietsub chất lượng cao."
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Thông báo 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_notification_dark"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔥 Top 10 phim hot tuần này"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khám phá ngay những bộ phim được xem nhiều nhất."
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Bạn có thể thêm nhiều thông báo tương tự ở đây -->

    </LinearLayout>
</ScrollView>
